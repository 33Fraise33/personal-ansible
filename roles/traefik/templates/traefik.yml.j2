## traefik.yml

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: web-secure
          scheme: https

  web-secure:
    address: ":443"

certificatesResolvers:
  le:
    acme:
      email: {{ letsencrypt_email }}
      storage: acme.json
      storage: /letsencrypt/acme.json
      httpChallenge:
        entryPoint: web

# Docker configuration backend
providers:
  docker:
    defaultRule: "Host(`{{ trimPrefix `/` .Name }}.frai.se`)"

# API and dashboard configuration
api:
  insecure: true
