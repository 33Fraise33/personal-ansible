# my global config
global:
  scrape_interval:     2m # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s # Evaluate rules every 15 seconds. The default is every 1 minute.
  #scrape_timeout: 30s # scrape_timeout is set to the global default (10s).

# Alertmanager configuration
alerting:
  alertmanagers:
  - static_configs:
    - targets:
      # - alertmanager:9093

# Load rules once and periodically evaluate them according to the global 'evaluation_interval'.
rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
scrape_configs:
  # The job name is added as a label `job=<job_name>` to any timeseries scraped from this config.
  - job_name: 'prometheus'

    # metrics_path defaults to '/metrics'
    # scheme defaults to 'http'.

    static_configs:
    - targets: ['localhost:9090']

  - job_name: 'blackbox_icmp'
    scrape_interval: 30s
    metrics_path: /probe
    params:
      module: [icmp]
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_blackbox_icmp*.json'
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ docker_network.prometheus_blackbox }}:9115  # This is your blackbox exporter.

  - job_name: 'blackbox_http'
    scrape_interval: 5m
    metrics_path: /probe
    params:
      module: [http_2xx]
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_blackbox_http*.json'
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ docker_network.prometheus_blackbox }}:9115  # This is your blackbox exporter.

  - job_name: 'node_exporter'
    scrape_interval: 15s
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_node_exporter*.json'

  - job_name: 'windows_exporter'
    scrape_interval: 15s
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_windows*.json'

  - job_name: 'speedtest'
    metrics_path: /probe
    scrape_interval: 5h
    scrape_timeout: 2m
    static_configs:
    - targets:
      - {{ docker_network.prometheus_speedtest }}:9516

  - job_name: 'solaredge'
    metrics_path: /metrics
    scrape_interval: 15s
    static_configs:
    - targets:
      - {{ docker_network.solaredge_exporter}}:2112

  - job_name: 'mikrotik-snmp'
    scrape_interval: 15s
    scrape_timeout: 10s
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_mikrotik*.json'
    metrics_path: /snmp
    params:
      module:
        - mikrotik
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ docker_network.prometheus_snmp_exporter }}:9116  # The SNMP exporter's real hostname:port.

  - job_name: 'ubiquiti-snmp'
    scrape_interval: 15s
    scrape_timeout: 10s
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_ubiquiti_edgemax*.json'
    metrics_path: /snmp
    params:
      module:
        - if_mib
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ docker_network.prometheus_snmp_exporter }}:9116  # The SNMP exporter's real hostname:port.

  - job_name: 'ruckus-snmp'
    scrape_interval: 15s
    scrape_timeout: 10s
    file_sd_configs:
    - files:
      - '/config/file_sd/targets_ruckus*.json'
    metrics_path: /snmp
    params:
      module:
        - ruckus_ap
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ docker_network.prometheus_snmp_exporter }}:9116  # The SNMP exporter's real hostname:port.

  - job_name: 'docker'
    scrape_interval: 2m
    static_configs:
      - targets: ['172.16.33.5:9323']
