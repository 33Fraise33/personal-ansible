---
global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 10s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - "prometheus-alertmanager:9093"

rule_files:
  - "alerts.d/*.yml"

scrape_configs:
  - job_name: 'blackbox_icmp'
    metrics_path: /probe
    params:
      module: [icmp]
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_blackbox_icmp.yml'
          - '/config/file_sd/targets_mikrotik.yml'
          - '/config/file_sd/targets_snmp_generic.yml'
          - '/config/file_sd/targets_node_exporter.yml'
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: "prometheus-blackbox_exporter:9115"

  - job_name: 'blackbox_http'
    scrape_interval: 5m
    metrics_path: /probe
    params:
      module: [http_2xx]
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_blackbox_http.yml'
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: "prometheus-blackbox_exporter:9115"

  - job_name: 'node_exporter'
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_node_exporter.yml'
    relabel_configs:
      - source_labels: [__param_target]
        target_label: instance
      - source_labels: [__address__]
        regex: (.*)
        replacement: '$1:9100'
        target_label: __address__

  - job_name: 'frr_exporter'
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_frr_exporter.yml'
    relabel_configs:
      - source_labels: [__param_target]
        target_label: instance
      - source_labels: [__address__]
        regex: (.*)
        replacement: '$1:9342'
        target_label: __address__

  - job_name: 'speedtest'
    metrics_path: /probe
    scrape_interval: 5h
    scrape_timeout: 3m
    static_configs:
      - targets:
          - "prometheus-speedtest_exporter:9516"

  - job_name: 'graphite'
    static_configs:
      - targets:
          - "prometheus-graphite_exporter:9108"

  - job_name: 'docker'
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_docker.yml'
    relabel_configs:
      - source_labels: [__param_target]
        target_label: instance
      - source_labels: [__address__]
        regex: (.*)
        replacement: '$1:9323'
        target_label: __address__

  - job_name: "hass"
    metrics_path: /api/prometheus
    authorization:
      credentials: "{{ home_assistant_access_token }}"
    scheme: https
    static_configs:
      - targets: ['ha.frai.se']

### SNMP

  - job_name: 'mikrotik-snmp'
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_mikrotik.yml'
    metrics_path: /snmp
    params:
      module:
        - mikrotik
      auth:
        - fraise_v2
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: "prometheus-snmp_exporter:9116"

  - job_name: 'generic-snmp'
    file_sd_configs:
      - files:
          - '/config/file_sd/targets_mikrotik.yml'
          - '/config/file_sd/targets_snmp_generic.yml'
    metrics_path: /snmp
    params:
      module:
        - if_mib
      auth:
        - fraise_v2
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: "prometheus-snmp_exporter:9116"
